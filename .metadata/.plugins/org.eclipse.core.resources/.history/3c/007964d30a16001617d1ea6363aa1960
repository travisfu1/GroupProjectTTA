package Zoo;

public class Weight 
{
	private double weight;
	private String unit; 
	
	public Weight()
	{
		
	}
	
	public Weight(double weight, String unit)
	{
		setValue(weight);
		setUnit(unit);
	}


	/**
	 * @return the value
	 */
	public double getWeight() {
		return weight;
	}

	/**
	 * @param value the value to set
	 */
	public void setValue(double weight) {
		this.weight = weight;
	}

	/**
	 * @return the letter
	 */
	public String getUnit() {
		return unit; 
	}

	/**
	 * @param letter the letter to set
	 */
	public void setUnit(String unit) {
		this.unit = unit;
	}
	/* (non-Javadoc)
	 * @see java.lang.Object#toString()
	 */
	
	@Override
	public String toString() {
		return weight + "\n"+ ""+ getUnit();
	}
}
